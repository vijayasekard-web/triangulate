<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Professional</th>
      <th>Client</th>
      <th>Appointment type</th>
      <th>Client status</th>
      <th>Professional status</th>
      <th>Metadata</th>
      <th>Rating</th>
      <th>Fees</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.professional %></td>
        <td><%= appointment.client %></td>
        <td><%= appointment.appointment_type %></td>
        <td><%= appointment.client_status %></td>
        <td><%= appointment.professional_status %></td>
        <td><%= appointment.metadata %></td>
        <td><%= appointment.rating %></td>
        <td><%= appointment.fees %></td>
        <td><%= appointment.start_at %></td>
        <td><%= appointment.end_at %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
